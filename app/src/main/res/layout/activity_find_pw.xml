<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindPwActivity">

    <!-- 상단바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Moodiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 상단바 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="비밀번호 찾기"
            android:textSize="20sp"
            android:fontFamily="@font/netmarble_m"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- 아이디 텍스트-->
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="54.5dp"
        android:fontFamily="@font/netmarble_m"
        android:text="아이디"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 아이디 입력창 -->
    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29.5dp"
        android:layout_marginEnd="29.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_id"
        android:fontFamily="@font/netmarble_m"
        android:hint="example"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"/>

    <!-- 이메일 텍스트 -->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="54.5dp"
        android:fontFamily="@font/netmarble_m"
        android:text="이메일"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 이메일 입력창 -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:layout_marginStart="29.5dp"
        android:layout_marginEnd="29.5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        android:fontFamily="@font/netmarble_m"
        android:hint="johndoe@mail.com"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="25dp"
        android:paddingRight="25dp" />


    <!-- 확인 버튼 -->
    <ImageButton
        android:id="@+id/btn_findpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="확인"
        android:background="@drawable/find_pw_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>