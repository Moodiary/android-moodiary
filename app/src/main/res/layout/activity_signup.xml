<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignupActivity">

    <!-- 상단바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Moodiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 상단바 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/netmarble_b"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- 이름 텍스트 -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="54.5dp"
        android:fontFamily="@font/netmarble_m"
        android:text="이름"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 이름 입력창 배경 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29.5dp"
        android:layout_marginEnd="29.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:background="@drawable/bg_edittext" />

    <!-- 이름 입력창 -->
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="49.5dp"
        android:layout_marginEnd="49.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:fontFamily="@font/netmarble_m"
        android:hint="example"
        android:background="@null" />

    <!-- 아이디 텍스트 -->
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="54.5dp"
        android:fontFamily="@font/netmarble_m"
        android:text="아이디"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 아이디 입력창 배경 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29.5dp"
        android:layout_marginEnd="29.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_id"
        android:background="@drawable/bg_edittext"  />

    <!-- 아이디 입력창 -->
    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="49.5dp"
        android:layout_marginEnd="49.5dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_id"
        android:fontFamily="@font/netmarble_m"
        android:hint="●●●●●●●"
        android:background="@null" />

    <!-- 이메일 텍스트 -->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="54.5dp"
        android:fontFamily="@font/netmarble_m"
        android:text="이메일"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 이메일 입력창 배경 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29.5dp"
        android:layout_marginEnd="29.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        android:background="@drawable/bg_edittext"  />

    <!-- 이메일 입력창 -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginStart="49.5dp"
        android:layout_marginEnd="49.5dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        android:fontFamily="@font/netmarble_m"
        android:hint="johndoe@mail.com"
        android:background="@null" />

    <!-- 비밀번호 텍스트 -->
    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="54.5dp"
        android:fontFamily="@font/netmarble_m"
        android:text="비밀번호"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 비밀번호 입력창 배경 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29.5dp"
        android:layout_marginEnd="29.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_password"
        android:background="@drawable/bg_edittext"  />

    <!-- 비밀번호 입력창 -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginStart="49.5dp"
        android:layout_marginEnd="49.5dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_password"
        android:fontFamily="@font/netmarble_m"
        android:hint="●●●●●●●"
        android:background="@null" />

    <!-- 비밀번호 확인 텍스트 -->
    <TextView
        android:id="@+id/tv_identify_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="54.5dp"
        android:fontFamily="@font/netmarble_m"
        android:text="비밀번호 확인"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- 비밀번호 확인 배경 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29.5dp"
        android:layout_marginEnd="29.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_identify_password"
        android:background="@drawable/bg_edittext"  />

    <!-- 비밀번호 확인 입력창 -->
    <EditText
        android:id="@+id/et_identify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginStart="49.5dp"
        android:layout_marginEnd="49.5dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_identify_password"
        android:fontFamily="@font/netmarble_m"
        android:hint="●●●●●●●"
        android:background="@null"/>

    <!-- 확인 버튼 -->
    <ImageButton
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="29.5dp"
        android:layout_marginEnd="29.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/signup_btn_finish"/>

</androidx.constraintlayout.widget.ConstraintLayout>